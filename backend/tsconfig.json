{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist-backend", // Onde o build final (produção) iria
    "rootDir": "."
  },
  "include": ["**/*.ts"] // Inclui todos os arquivos .ts dentro da pasta 'backend'
}